<Window x:Class="Lotto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lotto"
        mc:Ignorable="d"
        Title="LOTTO" Height="450" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="181" Margin="80,121,0,0" VerticalAlignment="Top" Width="220" Source="/Lotto.png"/>
        <TextBox x:Name="resultTextBox" HorizontalAlignment="Left" Margin="340,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="255" Height="190" FontWeight="Bold"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="618,121,0,0" VerticalAlignment="Top" Height="48" Width="104" Click="startButton_Click"/>
        <Button x:Name="clearButton" Content="Wissen" HorizontalAlignment="Left" Margin="618,188,0,0" VerticalAlignment="Top" Height="48" Width="105" Click="clearButton_Click"/>
        <Button x:Name="closeButton" Content="Afsluiten" HorizontalAlignment="Left" Margin="617,263,0,0" VerticalAlignment="Top" Height="48" Width="105" Click="closeButton_Click"/>
        <Label Content="De 6 lottogetallen zijn:" HorizontalAlignment="Left" Margin="340,99,0,0" VerticalAlignment="Top" Width="255" FontWeight="Bold"/>

    </Grid>
</Window>
